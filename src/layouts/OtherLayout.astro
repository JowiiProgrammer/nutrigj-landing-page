---
import '@fontsource-variable/inter';
import NavBar from '../components/NavBar.astro';

import { ClientRouter } from 'astro:transitions';

interface Props {
  title: string;
  description?: string;
}

const {
  title,
  description = 'Transforma tu rendimiento con una nutrición personalizada. Joel Galindo, nutricionista deportivo certificado, te ayuda a alcanzar tus metas deportivas con planes nutricionales personalizados.',
} = Astro.props;
---

<!doctype html>
<html lang='es' class='scroll-smooth'>
  <head>
    <meta charset='UTF-8' />
    <meta name='description' content={description} />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon-32x32.png' />
    <meta name='generator' content={Astro.generator} />
    <title>{title}</title>
    <ClientRouter />
  </head>
  <body class='bg-white flex flex-col min-h-screen'>
    <!-- Navbar -->
    <NavBar />

    <!-- Contenido Principal -->
    <main class='flex-grow'>
      <slot />
    </main>

    <!-- Footer -->
    <footer class='py-10 bg-nutrigj-secondary text-white'>
      <div
        class='container mx-auto flex flex-col md:flex-row justify-between items-center'
      >
        <!-- Texto del Footer -->
        <div class='text-center md:text-left'>
          <p class='text-sm'>© 2024 NutriGJ. Todos los derechos reservados.</p>
          <ul class='flex justify-center md:justify-start space-x-6 mt-4'>
            <li>
              <a href='/privacidad' class='hover:underline'
                >Política de Privacidad</a
              >
            </li>
            <li>
              <a href='/terminos' class='hover:underline'>Términos de Uso</a>
            </li>
          </ul>
        </div>

        <!-- Redes Sociales -->
